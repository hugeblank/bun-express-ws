{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "allowJs": true,
    "types": ["bun-types"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "lib": ["esnext"]
  },
  "include": ["./**/*"]
}